Pipeline{
agent any

  stages{
    stage('build'){
      steps{
        sh 'mvn clean install'
      }
    }
    stage('test'){
      steps{
      sh 'mvn test'
      }
    }

  stage('deploy'){
    steps{
      sh'mvn deploy'
    }
  }
    post{
      always{
        sh" echo pipeline completed"
      }
      success{
        sh "echo pipeline succeded"
      }
      failure{
        sh"echo pipeline failed"
      }
    }
  }
}
